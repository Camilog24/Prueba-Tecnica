@model List<Prueba_Tecnica_Junior.Models.Persona>;
<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Lista de Personas Registradas</h2>    
            <a asp-controller="Persona" asp-action="Crear" class="btn btn-success mb-3">Nuevo</a>
          
        <table id="TablaDatos" class="table table-bordered">
            <thead>
                <tr>
                <th>Id</th>
                    <th class="col-Nombres">Nombres</th>
                    <th class ="col-Apellidos">Apellidos</th>
                    <th class="col-TipoIdenti">Tipo de Identificacion</th>
                    <th class="col-NuIdentificacion">Numero de Identificacion</th>
                    <th class="col-Email">Email</th>
                    <th class="col-Fecha">Fecha de creacion</th>
                <th ></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var info in Model)
                {
                    <tr>
                        <td>@info.IdPersona</td>
                        <td>@info.Nombres</td>
                        <td>@info.Apellidos</td>
                        <td>@info.TipoIdentificacion</td>
                        <td>@info.NoIdentificacion</td>
                        <td>@info.Email</td>
                        <td>@info.FechaCreacion</td>
                        <td>
                            <a asp-controller="Persona" asp-action="Editar" asp-route-id="@info.IdPersona" class="btn btn-success mb-3">Editar</a>
                            <a asp-controller="Persona" asp-action="Eliminar" asp-route-id="@info.IdPersona" onclick="return confirmar()" class="btn btn-success mb-3">Eliminar</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts{
    <script src="~/js/Tabla.js"></script>
  
}