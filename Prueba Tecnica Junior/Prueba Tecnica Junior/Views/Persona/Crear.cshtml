@model Prueba_Tecnica_Junior.Models.Persona;
<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Nueva Persona</h2>
        <form method="post">
            <div class="mb-3">
            <label> Nombre Completo</label>
            <input class="form-control" asp-for="Nombres" type="text"/>
            </div>
            <div class="mb-3">
                <label> Apellidos Completo</label>
                <input class="form-control" asp-for="Apellidos" type="text" />
            </div>
            <div class="mb-3">
                <label> Tipo de identificacion</label>
                <select asp-for="TipoIdentificacion" class="form-check form-select">
                    <option value="1">C.C</option>
                    <option value="2">T.I</option>
                    <option value="3">C.E</option>
                </select>
            </div>
            <div class="mb-3">
                <label> Numero de identificacion</label>
                <input class="form-control" asp-for="NoIdentificacion" type="text" />
            </div>
            <div class="mb-3">
                <label> Email</label>
                <input class="form-control" asp-for="Email" type="text" />
            </div>
            <div class="mb-3">
                <label> Fecha de creacion</label>
                <input class="form-control" asp-for="FechaCreacion" type="date" />
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit" >Guardar</button>
                <a  asp-controller="Persona" asp-action="Listar" class="btn btn-warning">Volver</a>   
            </div>
        </form>
    </div>
</div>
